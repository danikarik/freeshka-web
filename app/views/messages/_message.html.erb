<% alignment = message.user.id == current_user_id ? "self-end" : "" %>
<div class="px-4 py-2 mt-4 bg-white rounded w-1/3 <%= alignment %>">
  <h5 class="text-gray-600"><%= message.user.email %></h5>
  <div class="flex flex-col">
    <span>
      <%= message.body %>
    </span>
    <span class="text-xs text-gray-600">
      <%= message.created_at.strftime("%k:%M, %d %B, %Y") %>
    </span>
  </div>
</div>

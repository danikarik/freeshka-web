<div class="p-8 bg-white rounded shadow-lg flex flex-col">
  <%= form_with(model: post, local: true) do |form| %>

    <% if post.errors.any? %>
      <div id="mx-4 px-4 py-2 border-2 border-red-600 rounded">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.text_field :title, class: 'w-full px-4 py-2 border-2 rounded', placeholder: t('post.title') %>

    <div class="mt-4">
      <%= form.rich_text_area :content %>
    </div>

    <%= render 'categories', form: form %>

    <%= render 'cities', form: form %>

    <div class="flex justify-end">
      <%= link_to 'Отмена', posts_path, class: "px-4 py-2 bg-white rounded text-indigo-600 border-2 border-indigo-600" %>
      <%= form.submit 'Сохранить',  class: "ml-2 px-4 py-2 bg-indigo-600 rounded text-white" %>
    </div>
  <% end %>
</div>
